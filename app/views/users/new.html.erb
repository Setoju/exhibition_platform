<h1>Sign Up</h1>

<div class="custom-form">
  <%= form_with model: @user, local: true do |form| %>
    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>

    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>

    <div class="field">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation %>
    </div>

    <div class="actions">
      <%= form.submit 'Sign Up' %>
    </div>
  <% end %>
</div>