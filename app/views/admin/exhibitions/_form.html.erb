<div class="custom-form">
  <%= form_with(model: [:admin, @exhibition.room.exhibition_center, @exhibition.room, @exhibition], local: true) do |f| %>
    <% if @exhibition.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@exhibition.errors.count, "error") %> prevented this exhibition from being saved:</h4>
        <ul>
          <% @exhibition.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-control", rows: 4 %>
    </div>

    <div class="mb-3">
      <%= f.label :exhibition_center_id, "Exhibition Center", class: "form-label" %>
      <%= f.collection_select :exhibition_center_id, ExhibitionCenter.all, :id, :name, {}, class: "form-select" %>
    </div>

    <div class="mb-3">
      <%= f.label :exhibition_type_id, "Exhibition Type", class: "form-label" %>
      <%= f.collection_select :exhibition_type_id, ExhibitionType.all, :id, :name, {}, class: "form-select" %>
    </div>

    <div class="mb-3">
      <%= f.label :room_id, class: "form-label" %>
      <%= f.collection_select :room_id, Room.all, :id, :name, {}, class: "form-select" %>
    </div>

    <div class="mb-3">
      <%= f.label :start_date, class: "form-label" %>
      <%= f.date_field :start_date, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :end_date, class: "form-label" %>
      <%= f.date_field :end_date, class: "form-control" %>
    </div>

    <%= f.submit class: "btn btn-primary" %>
    <%= link_to 'Back', admin_exhibition_center_room_path(@exhibition.room.exhibition_center, @exhibition.room), class: 'btn btn-secondary' %>
  <% end %>
</div>
