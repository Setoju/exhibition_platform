<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="admin-form">
      <%= form_with(model: [:admin, @exhibit], local: true) do |f| %>
        <% if @exhibit.errors.any? %>
          <div class="alert alert-danger">
            <h2><%= pluralize(@exhibit.errors.count, "error") %> prohibited this exhibit from being saved:</h2>
            <ul>
              <% @exhibit.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :description, class: "form-label" %>
          <%= f.text_area :description, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :width, class: "form-label" %>
          <%= f.number_field :width, step: 0.01, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :height, class: "form-label" %>
          <%= f.number_field :height, step: 0.01, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :depth, class: "form-label" %>
          <%= f.number_field :depth, step: 0.01, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :weight, class: "form-label" %>
          <%= f.number_field :weight, step: 0.01, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :creation_date, class: "form-label" %>
          <%= f.date_field :creation_date, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :material, class: "form-label" %>
          <%= f.text_field :material, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :copy, class: "form-check-label" %>
          <%= f.check_box :copy, class: "form-check-input ms-2" %>
        </div>

        <div class="mb-3">
          <%= f.label :exhibition_type_id, "Exhibition Type", class: "form-label" %>
          <%= f.collection_select :exhibition_type_id, ExhibitionType.all, :id, :name, {}, class: "form-select" %>
        </div>

        <div class="mb-3">
          <%= f.label :photos, class: "form-label" %>
          <%= f.file_field :photos, multiple: true, class: "form-control" %>
        </div>

        <div class="d-flex gap-2">
          <%= f.submit class: "btn btn-primary" %>
          <%= link_to 'Back', request.referer || admin_exhibits_path, class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
